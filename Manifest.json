{
  "name": "LifeHub",
  "schemas": {
    "notificationSubscriber": {
      "connectionParadigm": "subscriber",
      "receive": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "colour": {
            "type": "object",
            "properties": {
              "r": {"type":"number"},
              "g": {"type":"number"},
              "b": {"type":"number"}
            },
            "required": [
              "r",
              "g",
              "b"
            ]
          },
          "appName": {
            "type": "string"
          },
          "messageText": {
            "type": "string"
          },
		  "messageTitle" : {
            "type": "string"
          },
          "phoneName": {
            "type": "string"
          },
          "time": {
            "type": "string"
          }
        },
        "required": ["appName","messageText","messageTitle"]
      }
    },
	"weatherSubscriber" :{
      "connectionParadigm" : "subscriber",
      "receive" : {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties" : {
          "temperature" : {"type":"number"},
          "humidity" : {"type":"number"}
        },
        "required" : ["temperature"]
      }
    }
  }
}